{
    "name": "minimal-sample-1.8.0-next",
    "description": "Minimal components package sample touching most of the available options.",
    "version": "1.8.0-next",
    "defaultComponentOnEnter": "body",
    "components": [
        {
            "name": "body",
            "label": "Body Label",
            "icon": "icons/component.svg",
            "properties": ["selectProperty", "conditionalProperty"],
            "countStatistics": true
        },
        {
            "name": "intro",
            "label": {
                "key": "INTRO_KEY"
            },
            "icon": "icons/component.svg",
            "properties": ["checkboxProperty"],
            "directiveOptions": {
                "text": {
                    "stripStylingOnPaste": false
                }
            }
        },
        {
            "name": "container",
            "icon": "icons/component.svg",
            "selectionMethod": "handle",
            "showToolbar": "always",
            "allowNesting": "one-level",
            "label": {
                "key": "COMPONENT_CONTAINER_LABEL"
            },
            "properties": []
        }
    ],
    "groups": [
        {
            "label": "Minimal",
            "name": "minimal",
            "components": ["body"]
        },
        {
            "label": {
                "key": "MINIMAL"
            },
            "name": "minimal2",
            "components": ["body"]
        }
    ],
    "componentProperties": [
        {
            "name": "selectProperty",
            "label": "Select property sample",
            "control": {
                "type": "select",
                "options": [
                    {
                        "caption": "Default"
                    },
                    {
                        "caption": "Option 1",
                        "value": "_option1"
                    },
                    {
                        "caption": {
                            "key": "Option 2 {{0}}",
                            "values": {
                                "0": "Replacement"
                            }
                        },
                        "value": "_option2"
                    }
                ]
            },
            "dataType": "styles"
        },
        {
            "name": "childSelectProperty",
            "label": "Select property sample",
            "control": {
                "type": "select",
                "options": [
                    {
                        "caption": "Default"
                    },
                    {
                        "caption": "Option 1",
                        "value": "_option1"
                    },
                    {
                        "caption": "Option 2",
                        "value": "_option2"
                    }
                ]
            },
            "dataType": "styles"
        },
        {
            "name": "checkboxProperty",
            "label": "Checkbox property sample",
            "control": {
                "type": "checkbox",
                "value": "_valueWhenOn"
            },
            "dataType": "styles"
        },
        {
            "name": "sliderProperty",
            "label": "Slider property sample",
            "control": {
                "type": "slider",
                "minValue": -4,
                "maxValue": 5,
                "stepSize": 0.5
            },
            "defaultValue": -2,
            "dataType": "data"
        },
        {
            "name": "conditionalProperty",
            "label": "Conditional property sample",
            "control": {
                "type": "select",
                "options": [
                    {
                        "caption": "No value"
                    },
                    {
                        "caption": "Value 1",
                        "value": "value1"
                    },
                    {
                        "caption": "Value 2",
                        "value": "value2"
                    },
                    {
                        "caption": "Value 3",
                        "value": "value3"
                    }
                ]
            },
            "dataType": "data",
            "childProperties": [
                {
                    "matchType": "exact-value",
                    "properties": ["childSelectProperty"]
                },
                {
                    "matchType": "exact-value",
                    "matchExpression": "value1",
                    "properties": ["checkboxProperty"]
                },
                {
                    "matchType": "exact-value",
                    "matchExpression": "value2",
                    "properties": [
                        {
                            "control": {
                                "type": "header"
                            },
                            "label": "Label"
                        },
                        {
                            "name": "sliderProperty",
                            "directiveKey": "text"
                        },
                        "childSelectProperty",
                        "checkboxProperty"
                    ]
                }
            ]
        }
    ],
    "conversionRules": {
        "body": {
            "intro": "auto"
        }
    },
    "scripts": [],
    "customStyles": [
        {
            "label": "Test Style",
            "key": "test-style",
            "type": "JSON"
        },
        {
            "label": "Test Style 2",
            "key": "test-STYLE-2",
            "type": "JSON",
            "default": "./custom-styles/test-style.json"
        }
    ]
}
